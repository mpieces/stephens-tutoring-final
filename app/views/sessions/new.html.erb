<div class="form">
<h1>Sign In</h1>

<%= form_for(:session, url: signin_path) do |f| %>
    <!--  no Session model, therefore no analogue for the @user variable;
    form_for different than sign up form; have to give form_for more information -->
  <!--   :session = name of the resource
    sessions_path = corresponding URI -->


  <div class="form-group">
    <%= f.email_field :email, :placeholder => "Email" %><br />
  </div>
  <div class="form-group">
   <%= f.password_field :password, :placeholder => "Password" %><br />
  </div>

  <%= f.label :remember_me do %>
    <%= f.check_box :remember_me %>
    <span style="font-family: sans-serif">Remember me on this computer</span>
  <% end %>
<br>
<br>
    <%= f.submit "Sign In" %>
<% end %>
<br>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
<br>
<p><%= link_to "Back", root_url %></p>
</div>