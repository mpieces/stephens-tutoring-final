
<h1>New Review</h1>

<%= form_for(@testimonial) do |f| %>

  <div class="form-group">
    <%= f.text_area :feedback, rows: 10, cols: 50, :placeholder => "Feedback...." %><br>
  </div>
  <div class="form-group">
    <%= f.text_field :name, :placeholder => "Name (optional)" %><br>
  </div>
    <%= f.submit 'Submit' %>
<% end %>

<br>
<p><%= link_to 'Back', testimonials_path %></p>
