<p id="notice"><%= notice %></p>

<h1>Feedback</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @testimonials.each do |testimonial| %>
      <tr>
        <td><%= testimonial.feedback %></td>
        <td><%= testimonial.name %></td>

        <td><%= link_to 'Destroy', testimonial, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Feedback!', new_testimonial_path, class: "button" %>
<br>
<br>
<p><%= link_to "Back", current_user || root_url %></p>

