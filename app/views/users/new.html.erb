<div class="form">
<h1>Sign Up</h1>

          <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages' %>
            <div class="form-group">
                <%= f.text_field :first_name, :placeholder => "First name" %><br />
            </div>
            <div class="form-group">
                <%= f.text_field :last_name, :placeholder => "Last name" %><br />
            </div>
            <div class="form-group">
                <%= f.select :year, User::YEARS, prompt: 'Select current grade: ' %>
            </div>

            <div class="form-group">
                <%= f.email_field :email, :placeholder => "Email" %><br />
            </div>
            <div class="form-group">
                <%= f.phone_field :phone, :placeholder => "Phone" %><br />
            </div>
            <div class="form-group">
                <%= f.text_field :address, :placeholder => "Street address" %><br />
            </div>
            <div class="form-group">
                <%= f.text_field :city, :placeholder => "City" %><br />
            </div>
            <div class="form-group">
                <%= f.text_field :zip, :placeholder => "Zip code" %><br />
            </div>
            <div class="form-group">
                <h4>Password needs to be at least 6 characters long</h4>
                <br>
                <%= f.password_field :password, :placeholder => "Password" %><br />
            </div>
            <div class="form-group">
                <%= f.password_field :password_confirmation, :placeholder => "Confirm password" %><br />
            </div>
            <br>
            <%= f.submit "Create my account" %>
          <% end %>
        <br>
        <p><%= link_to "Back", root_url %></p>

</div>